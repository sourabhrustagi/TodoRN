{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug iOS",
      "type": "reactnative",
      "request": "launch",
      "platform": "ios",
      "target": "simulator",
      "sourceMaps": true,
      "outDir": "${workspaceRoot}/.vscode/.react",
      "cwd": "${workspaceRoot}",
      "enableDebug": true
    },
    {
      "name": "Debug Android",
      "type": "reactnative",
      "request": "launch",
      "platform": "android",
      "target": "emulator",
      "sourceMaps": true,
      "outDir": "${workspaceRoot}/.vscode/.react",
      "cwd": "${workspaceRoot}",
      "enableDebug": true
    },
    {
      "name": "Attach to packager",
      "type": "reactnative",
      "request": "attach",
      "sourceMaps": true,
      "outDir": "${workspaceRoot}/.vscode/.react",
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "Debug in Exponent",
      "type": "reactnative",
      "request": "launch",
      "platform": "exponent",
      "sourceMaps": true,
      "outDir": "${workspaceRoot}/.vscode/.react",
      "cwd": "${workspaceRoot}"
    }
  ]
} 